<UserControl
    x:Class="JDict.EntryItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:JDict"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <StackPanel Margin="10" Orientation="Vertical">
            <TextBlock x:Name="kanjiTextBlock" TextWrapping="Wrap" Foreground="{StaticResource ApplicationForegroundThemeBrush}"
                       FontSize="20" FontWeight="Light" HorizontalAlignment="Left" FontFamily="Segoe UI"/>
            <TextBlock x:Name="readingsTextBlock" TextWrapping="Wrap" Foreground="{StaticResource ApplicationForegroundThemeBrush}" 
                       FontSize="16" FontWeight="Light" HorizontalAlignment="Left" FontFamily="Segoe UI"/>
            <TextBlock x:Name="sensesTextBlock" TextWrapping="Wrap" Foreground="{StaticResource ApplicationForegroundThemeBrush}" 
                       FontSize="14" FontWeight="Light" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
